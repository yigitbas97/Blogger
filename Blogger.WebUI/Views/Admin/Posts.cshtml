@model Blogger.WebUI.Models.AdminPostsViewModel;
@{
    ViewData["Title"] = "Posts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--Admin Posts List-->
<div class="mt-2">
    <h2>Paylaşımlar</h2>

    <!--Add New Post-->
    <a class="btn btn-success mt-2" asp-controller="Post" asp-action="Add">Yeni Paylaşım Ekle</a>

    <!--Posts DataTable-->
    <div class="mt-4">
        <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Resim</th>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Yorumlar</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td>@post.Id</td>
                        <td><img src="~/images/post/@post.ImageUrl" height="100" width="100" alt="@post.Title"></td>
                        <td>@post.Title</td>
                        <td>@post.Category.Name</td>
                        <td><a class="btn btn-info" asp-controller="Admin" asp-action="Comments" asp-route-postId="@post.Id">Yorumlar</a></td>
                        <td><a class="btn btn-warning" asp-controller="Post" asp-action="Update" asp-route-postId="@post.Id">Güncelle</a></td>
                        <td><a class="btn btn-danger" asp-controller="Post" asp-action="Delete" asp-route-postId="@post.Id">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

