@model Blogger.WebUI.Models.AdminBansViewModel;
@{
    ViewData["Title"] = "Bans";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--Admin Bans List-->
<div class="mt-2">
    <h2>Kısıtlamalar</h2>

    <!--Bans DataTable-->
    <div class="mt-4">
        <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı</th>
                    <th>Açıklama</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ban in Model.Bans)
                {
                    <tr>
                        <td>@ban.Id</td>
                        <td>@ban.User.Name @ban.User.Surname</td>
                        <td>@ban.Description</td>
                        <td><a class="btn btn-danger" asp-controller="Ban" asp-action="Delete" asp-route-banId="@ban.Id">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

