@model Blogger.WebUI.Models.AdminRepliesViewModel; 
@{
    ViewData["Title"] = "Replies";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--Admin Post-Comment-Replies List-->
<div class="mt-2">
    <h2>Cevaplar</h2>

    <br />

    <h5><strong>Paylaşım Adı : </strong> @Model.Post.Title</h5>
    <h5><strong>Yorum : </strong> @Model.Comment.CommentContent</h5>
    
    <!--Replies DataTable-->
    <div class="mt-4">
        <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Cevap</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reply in Model.Comment.Replies)
                {
                    <tr>
                        <td>@reply.Id</td>
                        <td>@reply.ReplyContent</td>
                        <td><a class="btn btn-danger" asp-controller="Reply" asp-action="Delete" asp-route-replyId="@reply.Id">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

