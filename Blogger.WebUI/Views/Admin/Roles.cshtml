@model Blogger.WebUI.Models.AdminRolesViewModel;
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--Admin Roles List-->
<div class="mt-2">
    <h2>Roller</h2>

    <!--Add New Role-->
    <a class="btn btn-success mt-2" asp-controller="Role" asp-action="Add">Yeni Rol Ekle</a>

    <!--Roles DataTable-->
    <div class="mt-4">
        <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td><a class="btn btn-danger" asp-controller="Role" asp-action="Delete" asp-route-roleId="@role.Id">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

